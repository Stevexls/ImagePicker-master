<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/topBar_background_color">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_back_press"
        android:padding="?attr/topBar_arrow_image_padding"
        app:srcCompat="?attr/topBar_arrow_image" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_back"
        android:text="@string/album_name_all"
        android:textColor="?attr/topBar_text_color"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_top_confirm"
        android:minWidth="48dp"
        android:minHeight="32dp"
        android:paddingLeft="14.0dp"
        android:paddingRight="14.0dp"
        android:text="@string/top_bar_confirm"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
